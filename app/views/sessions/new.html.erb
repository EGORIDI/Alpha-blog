<h1 align="center">Log in</h1>

<%= form_for :session, :html => { class: "form-horizontal", role: "form"}, url: login_path do |f| %>
  <div class="form-group row">
    <div class="col-form-label col-md-2" align="right">
      <%= f.label :email %>
    </div>
    <div class="col-md-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
      <small id="titlehelp" class="form-text text-muted">Choose an unique and sensible username</small>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-form-label col-md-2" align="right">
      <%= f.label :password %>
    </div>
    <div class="col-md-8">
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
      <small id="titlehelp" class="form-text text-muted">Provide an email that can actually reach you.</small>
    </div>
  </div>
  <div class="form-group">
    <div class="offset-2 col-md-2">
      <%= f.submit("Log in", class: 'btn btn-primary btn-lg')  %>
    </div>
  </div>
<% end %>
<div class="col-md-4 offset-4">
  [  <%= link_to "Cancel request and return to articles listing", articles_path %>  ]
</div>
