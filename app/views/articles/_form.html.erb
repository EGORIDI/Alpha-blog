<% if @article.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<div class="row">
  <div class="col-md-12">
    <%= form_for @article do |f| %>
      <div class="form-group row">
        <div class="col-form-label col-md-2" align="right">
          <%= f.label :title %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
          <small id="titlehelp" class="form-text text-muted">Give a clarifying title to your article.</small>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-form-label col-md-2" align="right">
          <%= f.label :description %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :description, rows:10, class: "form-control", placeholder:"Body of article" %>
          <small id="titlehelp" class="form-text text-muted">Try to express yourself in a clear and concise manner.</small>
        </div>
      </div>
      <div class="form-group">
        <div class="offset-2 col-md-2">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 offset-4">
      [  <%= link_to "Cancel request and return to articles listing", articles_path %>  ]
    </div>

  </div>
</div>
