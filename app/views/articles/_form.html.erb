
<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-md-12">
    <%= form_for @article do |f| %>
      <div class="form-group row">
        <div class="col-form-label col-md-2" align="right">
          <%= f.label :title %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
          <small id="titlehelp" class="form-text text-muted">Give a clarifying title to your article.</small>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-form-label col-md-2" align="right">
          <%= f.label :description %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :description, rows:10, class: "form-control", placeholder:"Body of article" %>
          <small id="titlehelp" class="form-text text-muted">Try to express yourself in a clear and concise manner. Be nice, donâ€™t post angry, and enjoy yourself. This is supposed to be fun.</small>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="form-check form-check-inline">
            <div class="offset-2 col-md-8">
              <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb|  %>
                <% cb.label(class: "form-check-label") {cb.check_box(class: "form-check-input", type: "checkbox") + cb.text} %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="offset-2 col-md-2">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 offset-4">
      [  <%= link_to "Cancel request and return to articles listing", articles_path %>  ]
    </div>

  </div>
</div>
