<% if obj.errors.any? %>
  <div class="row">
    <div class="col-md-8 offset-2">
      <div class="card text-white bg-danger">
        <div class="card-header">
          <h4 class="card-title">
            <%= pluralize(obj.errors.count, "error") %>
            prohibited this article from being saved:
          </h4>
          <div class="card-body">
            <ul>
              <% obj.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<br>
