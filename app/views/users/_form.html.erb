<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-md-12">
    <%= form_for @user, :html => {class: "form-horizontal", role: "form"} do |f| %>
      <div class="form-group row">
        <div class="col-form-label col-md-2" align="right">
          <%= f.label :username %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
          <small id="titlehelp" class="form-text text-muted">Choose an unique and sensible username</small>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-form-label col-md-2" align="right">
          <%= f.label :email %>
        </div>
        <div class="col-md-8">
          <%= f.email_field :email, class: "form-control", placeholder:"Enter email" %>
          <small id="titlehelp" class="form-text text-muted">Provide an email tht can actually reach you.</small>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-form-label col-md-2" align="right">
          <%= f.label :password %>
        </div>
        <div class="col-md-8">
          <%= f.password_field :password, class: "form-control", placeholder:"Enter password" %>
          <small id="titlehelp" class="form-text text-muted">Provide a safe and good one.</small>
        </div>
      </div>
      <div class="form-group">
        <div class="offset-2 col-md-2">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary btn-lg')  %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 offset-4">
      [  <%= link_to "Cancel request and return to articles listing", articles_path %>  ]
    </div>

  </div>
</div>
